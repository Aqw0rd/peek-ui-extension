{
  "name": "peek",
  "displayName": "Peek",
  "description": "Servicebus tool",
  "version": "0.0.1",
  "icon": "media/peekui_logo.png",
  "publisher": "anho",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aqw0rd/peek-ui-extension"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "anho-peekui-servicebus-explorer",
          "title": "Peek",
          "icon": "media/peekui_icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "anho.peek-ui",
        "contents": "No Servicebus connectionstrings added.\n[Add Servicebus](command:anho.peek-ui.addConnection)",
        "when": "anho.peek-ui:isInitialized == true"
      }
    ],
    "views": {
      "anho-peekui-servicebus-explorer": [
        {
          "id": "anho.peek-ui",
          "name": "Peek",
          "icon": "media/peekui_icon.svg",
          "contextualTitle": "Servicebus Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "anho.peek-ui.addConnection",
        "title": "Add Servicebus Connectionstring"
      },
      {
        "command": "anho.peek-ui.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "anho.peek-ui.connect",
        "title": "Connect",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "anho.peek-ui.transferDeadletterAll",
        "title": "Transfer Deadletter (All)"
      },
      {
        "command": "anho.peek-ui.purgeMessages",
        "title": "Purge Messages"
      },
      {
        "command": "anho.peek-ui.purgeDeadletter",
        "title": "Purge Deadletter"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "anho.peek-ui.addConnection",
          "when": "view == anho.peek-ui",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "anho.peek-ui.refresh",
          "when": "view == anho.peek-ui && (viewItem == 'connectedSbItem' || viewItem == 'childDependency' || viewItem == 'interactableDependency')",
          "group": "inline"
        },
        {
          "command": "anho.peek-ui.connect",
          "when": "view == anho.peek-ui && viewItem == 'disconnectedSbItem'",
          "group": "inline"
        },
        {
          "command": "anho.peek-ui.transferDeadletterAll",
          "when": "view == anho.peek-ui && viewItem == 'interactableDependency'",
          "group": "group1"
        },
        {
          "command": "anho.peek-ui.purgeMessages",
          "when": "view == anho.peek-ui && viewItem == 'interactableDependency'",
          "group": "group2"
        },
        {
          "command": "anho.peek-ui.purgeDeadletter",
          "when": "view == anho.peek-ui && viewItem == 'interactableDependency'",
          "group": "group2"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
},
  "dependencies": {
    "@azure/service-bus": "^7.9.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  }
}
